        font-size: 18pt;
        min-height: 40px;
        font-family: "DejaVu Sans";
}
QPushButton#Back {
        background: rgba(128,128,128,100%);
        color: black;
        font-size: 18pt;
        min-height: 40px;
        font-family: "DejaVu Sans";
}
QPushButton#Shift {
        background: rgba(128,128,128,100%);
        color: black;
        font-size: 18pt;
        min-height: 40px;
        font-family: "DejaVu Sans";
}
QPushButton#Cancel {
        background: rgb(188, 17, 66);
        color: black;
        font-size: 18pt;
        min-height: 40px;
        font-family: "DejaVu Sans";
}
